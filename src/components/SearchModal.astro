---
import { base } from '@/config'
import { getLangFromLocale } from '@/i18n/lang'
import { ui } from '@/i18n/ui'

interface Props {
  autoOpen?: boolean
}

const { autoOpen = false } = Astro.props
const currentLang = getLangFromLocale(Astro.currentLocale)
const currentUI = ui[currentLang as keyof typeof ui] ?? {}
const pagefindBase = base ? `${base}/pagefind` : '/pagefind'
const isProd = import.meta.env.PROD

function normalizePagefindText(text: string) {
  return text
    .replace(/\{COUNT\}/gi, '[COUNT]')
    .replace(/\{SEARCH_TERM\}/gi, '[SEARCH_TERM]')
}

const pagefindTranslations = {
  placeholder: normalizePagefindText(currentUI.searchPlaceholder ?? 'Search'),
  search_label: normalizePagefindText(currentUI.search ?? 'Search'),
  clear_search: normalizePagefindText(currentUI.searchClear ?? 'Clear'),
  zero_results: normalizePagefindText(currentUI.searchNoResults ?? 'No results'),
  one_result: normalizePagefindText(currentUI.searchOneResult ?? '[COUNT] result'),
  many_results: normalizePagefindText(currentUI.searchManyResults ?? '[COUNT] results'),
}
const pagefindNotReady = currentUI.searchNotReady ?? 'Search index is not ready.'
---

<div
  class="search-modal"
  data-search-modal
  data-pagefind-ignore
  aria-hidden="true"
  data-auto-open={autoOpen ? '1' : '0'}
  data-not-ready={pagefindNotReady}
>
  <div class="search-modal__backdrop" data-search-close />
  <div
    class="search-modal__dialog"
    role="dialog"
    aria-modal="true"
    aria-label={currentUI.search ?? 'Search'}
  >
    <button
      class="search-modal__close"
      type="button"
      data-search-close
      aria-label="关闭"
    >
      ×
    </button>

    <div class="search-modal__content">
      <div
        id="pagefind-modal"
        class="pagefind pagefind-modal"
        aria-label={currentUI.search}
      >
        <div class="pagefind-fallback-ui">
          <label class="pagefind-fallback-label" for="pagefind-modal-fallback-input">
            {currentUI.search ?? 'Search'}
          </label>
          <input
            id="pagefind-modal-fallback-input"
            class="pagefind-fallback-input"
            type="search"
            placeholder={currentUI.searchPlaceholder ?? 'Search'}
            disabled
          />
          <p class="pagefind-fallback">
            {currentUI.searchNotReady ?? 'Search index is not ready.'}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script
  type="module"
  is:inline
  data-astro-rerun
  define:vars={{ pagefindBase, pagefindTranslations, pagefindNotReady, isProd }}
>
  (function () {
    const modal = document.querySelector('[data-search-modal]')
    if (!modal) return

    const notReadyText = modal.getAttribute('data-not-ready') || 'Search index is not ready.'
    const autoOpen = modal.getAttribute('data-auto-open') === '1'

    let lastActive = null
    let pagefindReady = false
    let pagefindLoading = null

    const setOpen = (nextOpen) => {
      modal.dataset.open = nextOpen ? '1' : '0'
      modal.setAttribute('aria-hidden', nextOpen ? 'false' : 'true')
      document.documentElement.classList.toggle('search-modal-open', nextOpen)
    }

    const ensurePagefind = async () => {
      if (!isProd || pagefindReady) return
      if (pagefindLoading) return pagefindLoading

      const container = modal.querySelector('#pagefind-modal')
      if (!container) return

      const fallbackMarkup = container.innerHTML

      pagefindLoading = (async () => {
        try {
          let link = document.querySelector('link[data-pagefind-ui]')
          if (!link) {
            link = document.createElement('link')
            link.rel = 'stylesheet'
            link.href = `${pagefindBase}/pagefind-ui.css`
            link.dataset.pagefindUi = '1'
            document.head.appendChild(link)
          }

          await import(`${pagefindBase}/pagefind-ui.js`)

          const { PagefindUI } = globalThis
          if (!PagefindUI) throw new Error('PagefindUI is not available on globalThis')

          container.innerHTML = ''
          void new PagefindUI({
            element: '#pagefind-modal',
            showSubResults: true,
            resetStyles: false,
            translations: pagefindTranslations,
          })
          pagefindReady = true
        }
        catch (error) {
          if (!container.innerHTML) {
            container.innerHTML = fallbackMarkup || `<p class="pagefind-fallback">${notReadyText}</p>`
          }
          console.warn('[Pagefind] Failed to load search assets:', error)
        }
      })()

      return pagefindLoading
    }

    const focusInput = () => {
      const input =
        modal.querySelector('.pagefind-ui__search-input') ||
        modal.querySelector('.pagefind-fallback-input')
      if (input) input.focus()
    }

    const openModal = async () => {
      if (modal.dataset.open === '1') return
      lastActive = document.activeElement
      setOpen(true)
      await ensurePagefind()
      requestAnimationFrame(() => focusInput())
    }

    const closeModal = () => {
      if (modal.dataset.open !== '1') return
      setOpen(false)
      if (lastActive && typeof lastActive.focus === 'function') {
        lastActive.focus()
      }
    }

    document.addEventListener('click', (event) => {
      const target = event.target
      if (!(target instanceof Element)) return

      const trigger = target.closest('[data-search-open]')
      if (trigger) {
        event.preventDefault()
        void openModal()
        return
      }

      if (target.closest('[data-search-close]')) {
        closeModal()
      }
    })

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') closeModal()
    })

    document.addEventListener('search-modal-open', () => void openModal())

    if (autoOpen) {
      document.addEventListener('astro:page-load', () => void openModal())
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => void openModal())
      } else {
        void openModal()
      }
    }
  })()
</script>

<style is:global>
  .search-modal {
    position: fixed;
    inset: 0;
    display: grid;
    place-items: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 220ms ease;
    z-index: 999;
  }

  .search-modal[data-open='1'] {
    opacity: 1;
    pointer-events: auto;
  }

  .search-modal__backdrop {
    position: absolute;
    inset: 0;
    background: oklch(0 0 0 / 0.45);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .search-modal__dialog {
    position: relative;
    width: min(72rem, 92vw);
    max-height: 84vh;
    background: oklch(var(--un-preset-theme-colors-background) / 0.92);
    border: 1px solid oklch(var(--un-preset-theme-colors-primary) / 0.35);
    border-radius: 1rem;
    box-shadow: 0 24px 60px oklch(0 0 0 / 0.45);
    padding: 1.1rem 1.1rem 1.2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    z-index: 1;
  }

  .search-modal__close {
    position: absolute;
    top: 0.5rem;
    right: 0.6rem;
    width: 2rem;
    height: 2rem;
    border: none;
    border-radius: 0.6rem;
    background: transparent;
    color: oklch(var(--un-preset-theme-colors-secondary) / 0.8);
    font-size: 1.3rem;
    cursor: pointer;
  }

  .search-modal__close:hover {
    color: oklch(var(--un-preset-theme-colors-primary) / 0.9);
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.12);
  }

  .search-modal__content {
    min-height: 10rem;
    max-height: calc(84vh - 4.5rem);
    overflow: hidden;
  }

  /* =========================
     Pagefind：确保不会出现“内部白框”
     重点：pagefind-ui.css 是运行时加载的，所以这里用更高优先级 + !important
     ========================= */

  .search-modal .pagefind.pagefind-modal .pagefind-ui {
    --pagefind-ui-primary: oklch(var(--un-preset-theme-colors-primary));
    --pagefind-ui-text: oklch(var(--un-preset-theme-colors-secondary));
    --pagefind-ui-background: transparent;

    /* 关键：不要让 pagefind 默认样式用它画边框 */
    --pagefind-ui-border: transparent;
    --pagefind-ui-tag: oklch(var(--un-preset-theme-colors-primary) / 0.12);

    font-family: inherit;

    border: none !important;
    background: transparent !important;
    padding: 0 !important;
    box-shadow: none !important;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__search-input {
    border-radius: 0.6rem;
    padding: 0.75rem 1rem 0.75rem 2.6rem;
    line-height: 1.6;
    font-size: 1rem;

    background-color: oklch(var(--un-preset-theme-colors-secondary) / 0.04) !important;
    border: 1px solid oklch(var(--un-preset-theme-colors-secondary) / 0.16) !important;
    box-shadow: none !important;

    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" stroke="%23c9c9c9" stroke-width="1.5"><circle cx="9" cy="9" r="5.5" /><path d="M13 13l4 4" /></svg>');
    background-repeat: no-repeat;
    background-position: 0.8rem center;
    background-size: 1rem;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__search-input:focus {
    outline: none;
    border-color: oklch(var(--un-preset-theme-colors-primary) / 0.45) !important;
    box-shadow: 0 0 0 3px oklch(var(--un-preset-theme-colors-primary) / 0.14) !important;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__results {
    margin-top: 0.9rem;
    max-height: min(58vh, 34rem);
    overflow-y: auto;
    overscroll-behavior: contain;
    padding: 0 0.2rem 0.2rem 0.2rem;
  }

  /* 关键：去掉结果卡片的白色描边 */
  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__result {
    border: none !important;
    box-shadow: none !important;
    outline: none !important;

    border-radius: 0.7rem;
    padding: 0.7rem 0.85rem;
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.05) !important;
    transition: background-color 180ms ease;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__result + .pagefind-ui__result {
    margin-top: 0.6rem;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__result:hover {
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.10) !important;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__result-title {
    font-weight: 600;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__result-link {
    text-decoration: none;
  }

  .search-modal .pagefind.pagefind-modal .pagefind-ui .pagefind-ui__result-link:hover {
    text-decoration: underline;
  }

  /* fallback */
  .search-modal .pagefind-fallback {
    margin-top: 0.6rem;
    font-size: 0.98rem;
    color: oklch(var(--un-preset-theme-colors-secondary));
  }

  .search-modal .pagefind-fallback-ui {
    display: grid;
    gap: 0.45rem;
  }

  .search-modal .pagefind-fallback-label {
    font-weight: 600;
    font-size: 0.95rem;
    color: oklch(var(--un-preset-theme-colors-secondary));
  }

  .search-modal .pagefind-fallback-input {
    border-radius: 0.7rem;
    padding: 0.75rem 1rem;
    line-height: 1.6;
    font-size: 1rem;
    border: 1px solid oklch(var(--un-preset-theme-colors-primary) / 0.2);
    background: oklch(var(--un-preset-theme-colors-background));
    color: oklch(var(--un-preset-theme-colors-secondary));
  }

  .search-modal .pagefind-fallback-input:disabled {
    cursor: not-allowed;
    opacity: 0.7;
  }

  :global(html.search-modal-open),
  :global(html.search-modal-open body) {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .search-modal__dialog {
      width: min(92vw, 36rem);
      max-height: 86vh;
    }

    .search-modal .pagefind-ui__results {
      max-height: min(56vh, 28rem);
    }
  }
</style>
